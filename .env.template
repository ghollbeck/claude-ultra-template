# ============================================================================
# Claude Code Ultra — Environment Variables
# ============================================================================
# Copy this to ~/.zshenv or source it in your shell profile.
# These variables are referenced by MCP server configurations.
# ============================================================================

# Supabase
export SUPABASE_PROJECT_REF="your-supabase-project-ref"
export SUPABASE_ACCESS_TOKEN="your-supabase-access-token"

# Render.com
export RENDER_API_KEY="your-render-api-key"

# GitHub (generate at: https://github.com/settings/tokens)
export GITHUB_TOKEN="your-github-personal-access-token"

# Perplexity
export PERPLEXITY_API_KEY="your-perplexity-api-key"

# Slack
export SLACK_BOT_TOKEN="your-slack-bot-token"
export SLACK_TEAM_ID="your-slack-team-id"

# WhatsApp MCP (optional — only if using WhatsApp integration)
# This is the ONLY phone number Claude is allowed to message
export WHATSAPP_ALLOWED_RECIPIENT="+1XXXXXXXXXX"
